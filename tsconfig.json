{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "paths": {
            "@src/*": ["src/*"]
        },
        "baseUrl": "./",
        "outDir": ".build",
        "rootDir": "./"
    }
}
